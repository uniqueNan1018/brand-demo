<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhengnan.mapper.UserMapper">
    <!--    <select id="selectAll" resultType="User">-->
    <!--        select * from tb_user-->
    <!--    </select>-->
    <select id="selectAll" resultType="com.zhengnan.pojo.User">
        select * from tb_user;
    </select>
    <select id="select" resultType="com.zhengnan.pojo.User">
        select *
        from tb_user
        where username = #{username} and password = #{password};
    </select>
    <insert id="add">
        insert into tb_user(username, password, gender, addr)
        values (
            #{username},
            #{password},
            #{gender},
            #{addr}
        );
    </insert>
    <select id="selectByUsername" resultType="com.zhengnan.pojo.User">
        select *
        from tb_user
        where username = #{username};
    </select>
</mapper>